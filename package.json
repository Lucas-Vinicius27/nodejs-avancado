{
  "name": "nodejs-avancado",
  "version": "1.0.0",
  "description": "API using Clean Architecture and TDD.",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "desing patterns",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "author": {
    "name": "Lucas Vinicius",
    "email": "lucas_vfsantos@hotmail.com",
    "url": "https://lucassantos.app/"
  },
  "repository": "git@github.com:Lucas-Vinicius27/nodejs-avancado.git",
  "bugs": {
    "url": "https://github.com/Lucas-Vinicius27/nodejs-avancado/issues",
    "email": "lucas_vfsantos@hotmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node ",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint .",
    "lint:fix": "yarn run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn run test -- --watch",
    "test:staged": "yarn run test -- --findRelatedTests",
    "test:coverage": "yarn run test -- --coverage",
    "prepare": "husky install",
    "preci": "rm -rf node_modules"
  },
  "dependencies": {
    "module-alias": "^2.2.3",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "18.x"
  }
}
